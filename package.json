{
  "name": "screenfull-react",
  "description": "Full screen experiences for mobile",
  "author": "Marc Schipperheyn (m.schipperheyn@gmail.com)",
  "user": "mschipperheyn",
  "version": "0.0.1",
  "keywords": [
    "react",
    "reactjs",
    "screenfull-react"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config examples/webpack.config.babel.js --hot",
    "build": "npm run build:lib && npm run build:dist",
    "prebuild:lib": "rm -rf lib/*",
    "build:lib": "babel --out-dir lib src",
    "prebuild:umd": "rm -rf dist/*",
    "prebuild:dist": "rm -rf dist/*",
    "build:dist": "rollup -c && cross-env NODE_ENV=production rollup -c",
    "build:watch": "npm run build:lib -- --watch",
    "test:lint": "eslint . --ext .js --ext .jsx --ignore-path .gitignore --ignore-pattern dist --cache",
    "demo:build": "cross-env NODE_ENV=production webpack --config examples/webpack.config.babel.js",
    "lint": "eslint 'src/**/*.js'",
    "prepublish": "npm run build"
  },
  "main": "dist/screenfull-react.js",
  "module": "dist/screenfull-react.es.js",
  "jsnext:main": "dist/screenfull-react.es.js",
  "dependencies": {
    "screenfull": ">=3.0.0"
  },
  "peerDependencies": {
    "react": ">=15.4.0",
    "react-dom": ">=15.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "chai": "^3.5.0",
    "cross-env": "^5.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-standard": "^3.0.1",
    "html-loader": "^0.4.5",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "rollup": "^0.56.5",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.0.0",
    "rollup-plugin-node-resolve": "^3.2.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.2",
    "rollup-plugin-visualizer": "^0.3.1",
    "webpack": "^4.1.1",
    "webpack-dev-server": "^3.1.1",
    "webpack-hot-middleware": "^2.21.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mschipperheyn/screenfull-react.git"
  },
  "homepage": "https://github.com/mschipperheyn/screenfull-react/",
  "bugs": {
    "url": "https://github.com/mschipperheyn/screenfull-react/issues"
  },
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "packages"
    ]
  },
  "license": "MIT",
  "pre-push": [
    "test"
  ]
}
